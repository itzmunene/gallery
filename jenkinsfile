pipeline {
    agent any

    environment {
        NODE_ENV = "production"
        MONGO_URI_PROD = credentials('mongo-atlas-uri')  // Jenkins credential
    }

    triggers {
        githubPush()   // Auto-trigger when repo gets pushed
    }

    stages {
        stage('Checkout Repo') {
            steps {
                git branch: 'main', url: 'https://github.com/itzmunene/gallery.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Build') {
            steps {
                sh 'npm run build || echo "No build script found"'
            }
        }

        stage('Deploy to Render') {
            steps {
                sh '''
                  echo "Deploying app..."
                  export MONGO_URI_PROD=$MONGO_URI_PROD
                  node server.js &
                '''
            }
        }
    }

    post {
        success {
            echo 'Pipeline finished successfully!'
        }
        failure {
            echo 'Pipeline failed. Check logs.'
        }
    }
}
