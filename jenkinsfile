pipeline {
    agent any

    stages {
        stage("Clone Repository") {
            steps {
                git branch: 'main', url: 'https://github.com/itzmunene/gallery.git'
            }
        }

        stage("Install Dependencies") {
            steps {
                sh 'npm install'
            }
        }

        stage("Build Project") {
            steps {
                echo "Build step not required for Node.js static site, just dependencies installed."
            }
        }

        stage("Deploy to Render") {
            steps {
                echo "Deployment handled by Render auto-deploy on push."
            }
        }
    }

    post {
        success {
            echo "✅ Pipeline finished successfully"
        }
        failure {
            echo "❌ Pipeline failed. Check logs."
        }
    }
}
