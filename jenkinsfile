pipeline {
    agent any

    tools {
        nodejs "NodeJS"  
    }

    environment {
        MONGO_URI = "mongodb://localhost:27017/gallery"
        NODE_ENV = "production"
    }

    stages {
        stage("Checkout") {
            steps {
                git branch: 'master', url: 'https://github.com/itzmunene/gallery.git'
            }
        }

        stage("Install Dependencies") {
            steps {
                sh 'npm install'
            }
        }

        stage("Test") {
            steps {
                sh 'npm test || echo "⚠️ Tests failed, continuing..."'
            }
        }

        stage("Run App") {
            steps {
                sh 'npm start & sleep 5'
            }
        }
        stage('Install Dependencies') {
    steps {
        sh 'node -v'
        sh 'npm -v'
        sh 'cat package.json'
        sh 'npm install --legacy-peer-deps'
    }
}

    }
}
