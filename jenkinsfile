pipeline {
    agent any

    tools {
        nodejs "NodeJS"
    }

    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/itzmunene/gallery.git', branch: 'master'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh '''
                  rm -rf node_modules package-lock.json
                  npm install --legacy-peer-deps
                '''
            }
        }

        stage('Test') {
            steps {
                sh 'npm test'
            }
        }

        stage('Run App') {
            steps {
                sh 'node server.js & sleep 5'
            }
        }
    }

    post {
        success {
            slackSend(channel: '#jenkins-builds',
                      message: "✅ SUCCESS: Build #${env.BUILD_NUMBER} for *${env.JOB_NAME}* succeeded.\n🔗 ${env.BUILD_URL}\n🌍 Render: https://gallery-j9wd.onrender.com/")
        }
        failure {
            slackSend(channel: '#jenkins-builds',
                      message: "❌ FAILURE: Build #${env.BUILD_NUMBER} for *${env.JOB_NAME}* failed.\n🔗 ${env.BUILD_URL}")
        }
    }
}
