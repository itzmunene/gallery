pipeline {
    agent any

    tools {
        nodejs "NodeJS"
    }

    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/itzmunene/gallery.git', branch: 'master'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh '''
                  rm -rf node_modules package-lock.json
                  npm install --legacy-peer-deps
                '''
            }
        }

        stage('Test') {
            steps {
                sh 'npm test || echo "⚠ Tests failed or not configured, continuing..."'
            }
        }

        stage('Run App') {
            steps {
                sh 'node server.js & sleep 5'
            }
        }
        
        post 
        {
        success {
            slackSend(channel: '#jenkins-builds', 
                      message: "✅ Build #${env.BUILD_NUMBER} succeeded! View: ${env.BUILD_URL}")
        }
        failure {
            slackSend(channel: '#jenkins-builds', 
                      message: "❌ Build #${env.BUILD_NUMBER} failed! View: ${env.BUILD_URL}")
        }
        }


    }
}
