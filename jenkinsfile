pipeline {
    agent any

    environment {
        MONGO_URI = "mongodb://localhost:27017/gallery"
        NODE_ENV = "production"
    }

    stages {
        stage("Checkout") {
            steps {
                git branch: 'main', url: 'https://github.com/itzmunene/gallery.git'
            }
        }

        stage("Install Dependencies") {
            steps {
                sh 'npm install'
            }
        }

        stage("Test") {
            steps {
                sh 'npm test || true'
            }
        }

        stage("Run App") {
            steps {
                sh '''
                  export MONGO_URI=$MONGO_URI
                  npm start &
                  sleep 5
                '''
            }
        }
    }
}